  %body{:layout => "row", "ng-app" => "starterApp", "ng-controller" => "UserController as ul"}
    %md-sidenav.site-sidenav.md-sidenav-left.md-whiteframe-z2{"md-component-id" => "left", "md-is-locked-open" => "$mdMedia('gt-sm')"}
      %md-toolbar.md-whiteframe-z1
        %h1 Users
      %md-list
        %md-list-item{"ng-repeat" => "it in ul.users"}
          %md-button{"ng-class" => "{'selected' : it === ul.selected }", "ng-click" => "ul.selectUser(it)"}
            %md-icon.avatar{"md-svg-icon" => "{{it.avatar}}"}
            {{it.name}}
    .md-whiteframe-z2{:flex => "", :layout => "column", :role => "main", :tabindex => "-1"}
      %md-toolbar.md-whiteframe-z1{:layout => "row"}
        %md-button.menu{"aria-label" => "Show User List", "hide-gt-sm" => "", "ng-click" => "ul.toggleList()"}
          %md-icon{"md-svg-icon" => "menu"}
        %h1 Angular Material - Starter App
      %md-content#content{:flex => ""}
        %md-icon.avatar{"md-svg-icon" => "{{ul.selected.avatar}}"}
        %h2 {{ul.selected.name}}
        %p {{ul.selected.content}}
        %md-button.contact{"aria-label" => "Contact User", "md-no-ink" => "", "ng-click" => "ul.showContactOptions($event)"}
          %md-tooltip Contact {{ ul.selected.name }}
          %md-icon{"md-svg-icon" => "share"}
