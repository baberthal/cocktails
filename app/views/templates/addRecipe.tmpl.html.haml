%md-dialog{"aria-label" => "Add a Recipe", :flex => "66"}
  %form#recipeForm{:name => "recipeAddForm"}
    %md-toolbar
      .md-toolbar-tools
        %h2 Add a Recipe
        %span{:flex => ""}
        %md-button.md-icon-button{"ng-click" => "cancel()"}
          %md-icon{"aria-label" => "cancel"} close

    %md-dialog-content
      %md-input-container
        %label Name
        %input{:type => "text", :required => "", :name => "name", "ng-model" => "cocktail.name"}
        %div{"ng-messages" => "recipeAddForm.name.$error", "ng-show" => "recipeAddForm.name.$dirty"}
          %div{"ng-message" => "required"} Must supply a name

      %md-input-container
        %label Description
        %input{:type => "text", :required => "", :name => "description", "ng-model" => "cocktail.description"}
        %div{"ng-messages" => "recipeAddForm.description.$error", "ng-show" => "recipeAddForm.description.$dirty"}
          %div{"ng-message" => "required"} Must supply a description

      %md-input-container
        %label Instructions
        %input{:type => "text", :required => "", :name => "instructions", "ng-model" => "cocktail.instructions"}
        %div{"ng-messages" => "recipeAddForm.instructions.$error", "ng-show" => "recipeAddForm.instructions.$dirty"}
          %div{"ng-message" => "required"} Must supply instructions

      %md-chips{"ng-model" => "ctrl.selectedIngredients", "md-autocomplete-snap" => "", "md-require-match" => ""}
        %md-autocomplete{"md-selected-item" => "ctrl.selectedItem", "md-search-text" => "ctrl.searchText", "md-items" => "it in ctrl.querySearch(ctrl.searchText)", "md-item-text" => "it.name", :placeholder => "Add ingredients", "md-search-text-change" => "null", "md-selected-item-change" => "null"}
          %span{"md-highlight-text" => "ctrl.searchText"} {{ it.name }} - {{ it.ingredientType }}
        %md-chip-template
          %span
            %strong {{ $chip.name }}
            %em ({{ $chip.ingredientType }})



    .md-actions
      %md-button{"ng-click" => "saveRecipe(cocktail)", "ng-hide" => "isSubmitting"} Save
      %md-progress-circular{"md-mode" => "indeterminate", "ng-show" => "isSubmitting"}



